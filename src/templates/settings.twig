{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("nystudio107\\richvariables\\assetbundles\\richvariables\\RichVariablesAsset") %}

{{ forms.selectField({
    first: true,
    label: 'Globals Set'|t('rich-variables'),
    instructions: 'Choose the Globals Set that should be available for insertion into Rich Text fields'|t('rich-variables'),
    id: 'globalSetHandle',
    name: 'globalSetHandle',
    options: globalsSets,
    value: settings['globalSetHandle']
}) }}

{{ forms.lightswitchField({
    label: 'Use Icon for Menu'|t('rich-variables'),
    instructions: 'Controls whether the Rich Variables menu should display itself as an icon or text'|t('rich-variables'),
    id: 'useIconForMenu',
    name: 'useIconForMenu',
    on: settings['useIconForMenu'],
}) }}
