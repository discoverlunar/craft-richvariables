{% extends "_layouts/cp" %}

{% from 'rich-variables/_includes/macros.twig' import registerJsModules %}

{% block head %}
    {{ parent() }}
    {{ craft.richVariables.includeCssModule("vendors.css", false) }}
    {{ craft.richVariables.includeCssModule("styles.css", false) }}
{% endblock %}

{% block foot %}
    {{ parent() }}
    {% set jsModules = [
        'runtime.js',
        'vendors.js',
        'commons.js',
        'richvariables.js',
    ] %}
    {{ registerJsModules(jsModules) }}
{% endblock %}
