{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends 'rich-variables/_layouts/transcoder-cp.twig' %}

{% from "rich-variables/_includes/macros.twig" import includeJsModule %}

{% set title = 'Welcome to Rich Variables!' %}

{% set docsUrl = "https://github.com/nystudio107/craft-richvariables/blob/v1/README.md" %}
{% set linkGetStarted = "https://github.com/nystudio107/craft-richvariables" %}

{% do view.registerAssetBundle("nystudio107\\richvariables\\assetbundles\\richvariables\\RichVariablesWelcomeAsset") %}
{% set baseAssetsUrl = view.getAssetManager().getPublishedUrl('@nystudio107/richvariables/assetbundles/richvariables/dist', true) %}

{% set crumbs = [
    { label: "Rich Variables", url: url('rich-variables') },
    { label: "Welcome"|t, url: url('rich-variables/welcome') },
] %}

{% block content %}
    <div id="cp-nav-content" class="readable" style="text-align:center; margin:0 auto; padding: 5% 10%;">
        <confetti>
        </confetti>
        <img src="{{ baseAssetsUrl ~ '/img/RichVariables-icon.svg' }}" width="30%" height="auto" />
        <h2>Thanks for using Rich Variables!</h2>
        <p>The Transcoder plugin allows you to transcode any video (local or remote) to any size, bitrate, framerate, and save it out as a web-ready video in a variety of file formats.</p>
        <p>It can also transcode audio files to any bitrate & sample rate, to a variety of file formats. It can even extract audio tracks from video files.</p>

        <p>For more information, please <a href="{{ docsUrl }}" target="_blank" rel="noopener">see the documentation</a>.</p>
        <p>
            &nbsp;
        </p>
        <p>
            <a href="{{ linkGetStarted }}" target="_blank" rel="noopener"><button class="btn submit">Get Started</button></a>
        </p>
    </div>
    <div style="text-align:center; margin:0 auto; padding: 0;">
        <p class="instructions">
            Brought to you by <a href="http://nystudio107.com" target="_blank" rel="noopener">nystudio107</a>
        </p>
    </div>
    {# include our JavaScript modules #}
    {{ parent() }}
    {{ includeJsModule("welcome") }}
{% endblock %}
