{
    "name": "nystudio107/craft-richvariables",
    "description": "Allows you to easily use Craft Globals as variables in Rich Text fields",
    "type": "craft-plugin",
    "version": "1.0.20",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "richvariables",
        "redactor",
        "variables"
    ],
    "support": {
        "docs": "https://github.com/nystudio107/craft-richvariables/blob/v1/README.md",
        "issues": "https://github.com/nystudio107/craft-richvariables/issues"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "nystudio107",
            "homepage": "https://nystudio107.com"
        }
    ],
    "require": {
        "craftcms/cms": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
          "nystudio107\\richvariables\\": "src/"
        }
    },
    "extra": {
        "name": "Rich Variables",
        "handle": "rich-variables",
        "schemaVersion": "1.0.0",
        "hasCpSettings": true,
        "hasCpSection": false,
        "changelogUrl": "https://raw.githubusercontent.com/nystudio107/craft-richvariables/v1/CHANGELOG.md",
        "class": "nystudio107\\richvariables\\RichVariables"
    }
}
